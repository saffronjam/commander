{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "common/*": ["common/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [],
  "references": [
    { "path": "./api" },
    { "path": "./commander" },
    { "path": "./common" }
  ]
}